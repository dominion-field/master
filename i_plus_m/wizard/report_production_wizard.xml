<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="report_production_date_view_wizard" model="ir.ui.view">
        <field name="name">report.production.date.view.wizard</field>
        <field name="model">im.report.production.date</field>
        <field name="arch" type="xml">
            <form string="Set date for report production">
                <sheet>
                    <field name="message" />
                    <group>
                        <group>
                            <field name="date"/>    
              
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="report_production"  type="object" class="btn btn-primary" string="Report production"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="certificate_date_view_wizard" model="ir.ui.view">
        <field name="name">certificate.date.view.wizard</field>
        <field name="model">im.certification</field>
        <field name="arch" type="xml">
            <form string="Set certification date for report production">
                <sheet>
                    <field name="message" />
                    <group>
                        <group>
                            <field name="date"/>    
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="certify_production"  type="object" class="btn btn-primary" string="Certificate production"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
